extends layout

block content
  h1= title

  form(id='SafariForm', action="/resource/safari", method="POST")
    div.form-group
        label.safariAttr(for='varient') Safari Varient
        input#name(type='text', name='type')
    div.form-group
        label.safariAttr(for='user') Safari User
        input#name(type='text', name='user')
    div.form-group
        label.safariAttr(for='cost') Safari Cost
        input#cost(type='number', name='cost')
    input.button(type="submit")

  script.
    document.forms['SafariForm'].addEventListener('submit', (event) => {
      event.preventDefault();
      // TODO do something here to show user that form is being submitted
      fetch(event.target.action, {
        method: 'POST',
        body: new URLSearchParams(new FormData(event.target)) // event.target is the form
      }).then((resp) => {
        document.getElementById("errors").style.display="block"
        return resp.json(); // or resp.text() or whatever the server sends
      }).then((body) => {
        if(body.name){
          document.getElementById("errors").innerHTML=`${body.name}  \n ${body.message}\n`;
          alert("Save Failed")
        }else{
           alert("Save succeded")
        }
        // TODO handle body
      }).catch((error) => {
        // TODO handle error
        //- document.getElementById("errors").style.display="block"
        //- document.getElementById("errors").innerHTML="hello";
        alert("Save failed " + error)
      });